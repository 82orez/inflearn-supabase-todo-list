generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Note {
  id      Int    @id @default(autoincrement())
  title   String
  content String
}

model Todo {
  id         Int       @id @default(autoincrement())
  title      String
  created_at DateTime  @default(now()) @db.Timestamptz()
  updated_at DateTime? @default(now()) @db.Timestamptz()
}
